<h3><%= header %></h3>

<table class="table">
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
 
    </tr>
  </thead>

  <tbody>
    <% works.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%=  link_to work.title , work %></td>
        <td><%= work.creator %></td>
        <td><%= work.year %></td>
        <td><%= button_to "Upvote", upvote_path(work.id), method: :patch %> </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
