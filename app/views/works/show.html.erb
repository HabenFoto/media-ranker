<p id="notice"><%= notice %></p>

<h2><%= @work.title %></h2>

<p>
  <strong>Category:</strong>
  <%= @work.category %>
</p>

<p>
  <strong>Title:</strong>
  <%= @work.title %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @work.creator %>
</p>

<p>
  <strong>Year:</strong>
  <%= @work.year %>
</p>

<p>
  <strong>Description:</strong>
  <%= @work.description %>
</p>

<%= link_to 'Back to Media ranks', works_path, class:"btn btn-primary" %> 
<%= link_to 'Edit', edit_work_path(@work), class:"btn btn-primary" %> 
<%= link_to "Upvote", upvote_path(@work), method: :patch, class:"btn btn-primary" %> 
<%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you want to delete #{@work.title}?"}, class:"btn btn-danger"%> 

<section class="works-votes__container">
  <h3 class="works-votes__header"> <%= @work.votes.count%> Vote for this <%= @work.category%></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>

    <% @work.votes.each do |vote| %>
       <tr>
        <td><%= link_to vote.user.username, user_path(vote.user.id) %></td>
        <td><%= vote.created_at.strftime("%b %d, %Y")%> </td>
      
       </li>
    <% end %>

  </ul>
</section>